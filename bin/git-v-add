#!/usr/bin/env sh
#
# add file to git-v tracking
# 
# @author <bprinty@gmail.com>
# ------------------------------------------------


# meta
# ----
usage() {
    echo "usage: git v add [options] <file>"
    echo ""
    echo "Options:"
    echo "  --help              Show help and exit."
}


# exec
# ----
main() {
    if [ "$#" -lt 1 ]; then
        usage; exit 1
    fi

    case "$1" in
        "-h"|"--help")
            usage; exit 0
            ;;
    esac

    OLDIFS=$IFS;
    IFS="$(printf '\n\t')"
    for i in "$@"; do
        version=`grep -Eoh '\d\.\d\.\d(-rc[0-9a-f]{7})?' $i`
        if [ "$version" = "" ]; then
            echo "No version-like string found in $i. Abort!"
            exit 1
        fi
        # STOPPED HERE .. NEED TO PRINT RELATIVE PATH OF FILE TO MARKS LIST
        echo $i
    done
    IFS=$OLDIFS
}

base=`git rev-parse --show-toplevel`
marks="$base/.git/version/marks"
main "$@"
