#!/usr/bin/env sh
#
# push functionality of git-xfer plugin
# 
# @author <bprinty@gmail.com>
# ------------------------------------------------


# meta
# ----
usage() {
    echo "usage: git v list [--help]"
    echo ""
    echo "Options:"
    echo "  -h | --help              Show help and exit."
}

version() {
    file="$1"
    cat "$file" | grep ''
}


# exec
# ----
main() {

    case $1 in
        "-h"|"--help")
            usage; exit 0
            ;;
    esac

    if [ ! -e "$marks" ]; then
       echo 'Could not find tracking list! Something went wrong with your configuration.'
       exit 1
    fi

    cd $base
    for i in `cat $marks`; do
        version=`grep -Eoh '[0-9]+\.[0-9]+\.[0-9]+(-[0-9a-z]{5,20})?' $i | head -1`
        echo "$i ... $version"
    done
}

base=`git rev-parse --show-toplevel`
marks="$base/.git/version/marks"
main "$@"
