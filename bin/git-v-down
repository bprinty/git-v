#!/usr/bin/env sh
#
# increment version numbers for marked files
# 
# @author <bprinty@gmail.com>
# ------------------------------------------------


# meta
# ----
usage() {
    echo "usage: git v down [options] <type>"
    echo ""
    echo "Arguments:"
    echo "  type               major, minor, or subminor (major.minor.subminor)"
    echo ""
    echo "Options:"
    echo "  --help              Show help and exit."
}


# exec
# ----
main() {
    if [ "$#" -lt 1 ]; then
        usage; exit 1
    fi

    case "$1" in
        "-h"|"--help")
            usage; exit 0
            ;;
    esac
    vtype=$1

    cd $base
    for i in `cat $marks`; do
        version=`grep -Eoh '\d\.\d\.\d(-rc[0-9a-f]{5,10})?' $i`
        if [ "$version" = "" ]; then
            echo "No version-like string found in $i. Abort!"
            exit 1
        fi
        newversion=`echo $version | sed 's/-rc.*//g'`
        major=`echo $newversion | awk 'BEGIN { FS = "." } ; { print $1 }'`
        minor=`echo $newversion | awk 'BEGIN { FS = "." } ; { print $2 }'`
        subminor=`echo $newversion | awk 'BEGIN { FS = "." } ; { print $3 }'`
        if [ "$vtype" = "major" ]; then
            major=`echo "$major - 1" | bc`
            major=$(( $major > 0 ? $major : 0 ))
        elif [ $vtype = "minor" ]; then
            minor=`echo "$minor - 1" | bc`
            minor=$(( $minor > 0 ? $minor : 0 ))
        elif [ $vtype = "subminor" ]; then
            subminor=`echo "$subminor - 1" | bc`
            subminor=$(( $subminor > 0 ? $subminor : 0 ))
        fi
        newversion="$major.$minor.$subminor"
        cat $i | sed "s/$version/$newversion/g" > $i.tmp
        mv $i.tmp $i
        echo "$i ... $version --> $newversion"
    done
}

base=`git rev-parse --show-toplevel`
marks="$base/.git/version/marks"
main "$@"
